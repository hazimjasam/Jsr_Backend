<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/style/fontawesome.css">
    <link href="/style/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="/style/admin.css">

</head>
<style>
    .en {
        padding: 30px;
        color: rgb(93, 111, 132);
        direction: ltr;
    }

    .en * {
        direction: ltr;
    }

    body {
        width: 100%;
        background: rgb(127, 197, 255);
        background: linear-gradient(125deg, rgb(201, 242, 255) 0%, rgba(73, 114, 255, 1) 100%, rgb(66, 224, 255) 100%);
    }

    .side {
        position: fixed;


        border-radius: 30px 0 0 30px;
        left: 100%;
        top: 0%;
        width: 60%;
        background-color: white !important;
    }

    .side>div {
        position: relative;



        font-size: large;
        color: rgb(101, 101, 101);


        left: -35%;
        top: 10%;
        padding: 70px;
        width: 60%;
        background-color: white !important;
    }

    .side input {
        margin-bottom: 30px;
        height: 48px;
        background-color: white;
    }


    .img {

        position: fixed;


        left: 4%;
        top: 4%;
        width: 50%;

        z-index: 0;
    }

    .list {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr;

        grid-gap: 25px;
        position: relative;
        top: 19%;
        left: -20%;
        color: rgb(59, 59, 59);
    }

    .list>div {
        height: fit-content;
        width: 100%;

    }



    .btnx {

        border: 2px solid #a1d6f1;
        border-radius: 8px;
        padding: 8px;


        transition: 0.1s;
        background-color: #ffffff;
    }

    .btnx div {
        margin-top: 10px;
        text-align: center;
    }



    .btnx .boximg>img {
        transition: 0.1s;
        width: 84px;
        height: 84px;
    }

    .btnx:hover {

        background-color: #a1d6f1;
        box-shadow: 0px 0px 11px 2px rgba(147, 231, 252, 0.4);
        color: rgb(72, 69, 145);

    }

    .btnx:hover .boximg>img {
        width: 78px;
        height: 78px;
    }
</style>

<body>
    <img class="img" src="/images/xx.png">
    <div class="flex en">
        <div>
            <img style="width: 60px;" src='images/logo3_End_Trn.png'>
        </div>
        <div style="width: 20px"></div>
        <div>
            <h4>Red-Care </h4>
            <h6>Hospital information system</h6>
        </div>
    </div>

    <div class="side xx">
        <div id="login">
            <div class="flex" style="justify-content:center">
                <img style="margin: auto; width: 60px;" src='images/lock.png'>
            </div>
            <h4 style="text-align:center">اهلا بك من جديد!</h4>
            <br>


            <% if (errorFlashMessage) { %>

                <div>
                    <%= errorFlashMessage %>
                </div>

                <% } %>

                    <div id="mass" style="display:none; text-align: center; color: rgb(207, 53, 53); ">اسم المستخدم او
                        كلمة السر خطاء</div>


                    <form id="loginform" isloged="<% if (typeof user != " undefined") { %>true<% } %>" >
                            <div class="form-group" style="width: 100%;">

                                <input type="text" class="form-control" name="username" id="username"
                                    placeholder="الاســم" autocomplete="off" required>
                            </div>
                            <div class="form-group" style="width: 100%;">

                                <input type="password" class="form-control" name="password" id="password"
                                    placeholder="الرمز السري" autocomplete="off" required>
                            </div>
                            <button onclick="login()" type="button" class="btn btn-primary"
                                style="width: 100%; margin-top: 12px;">تسجيل
                                الدخول</button>
                    </form>


                    
        </div>

    </div>

</body>
<%- include('parts/scripts.ejs'); -%>
    <script defer>

        var wwww = $(window)
        $(".xx").css(`height`, `${wwww.height()}px`)


        $(window).on('resize', function () {
            var win = $(this); //this = window
            console.log(win.height())
            $(".xx").css(`height`, `${win.height()}px`)
        });


        var baloon = $('.img');
        function runIt() {
            baloon.animate({ top: '+=4' }, 1000);
            baloon.animate({ top: '-=4' }, 1000, runIt);
        }

        runIt();

        $('.side').animate({ left: '60%' }, 500);



        function login() {
            $.ajax({
                type: "POST",
                url: "/auth",
                data: {
                    username: $('#username').val().trim(),
                    password: $('#password').val().trim(),
                }
            }).done(function (o) {

                if (o.success == 0) {
                    $('#mass').show()
                }
                else
                    location.href = '/start'
            })
        }









        var wwww = $(window)
        $("#footer").css(`margin-top`, `${wwww.height() - 620}px`)


        $(window).on('resize', function () {
            var win = $(this); //this = window
            console.log(win.height())
            $("#footer").css(`margin-top`, `${win.height() - 620}px`)
        });





    </script>

</html>